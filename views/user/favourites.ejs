<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/headConfig') %>
    <link rel="stylesheet" href="/styles/user.css" />
    <title>favourites</title>
  </head>
  <body>
    <div class="container">
      <%- include('../partials/navbar') %>
      <main class="main">
        <header class="heading-wrapper">
          <h1 class="heading">Favourites</h1>
        </header>
        <% if (messages.success) { %>
          <p class="message-success"><%= messages.success %></p>
        <% } %>
        <% if (messages.error) { %>
          <p class="message-error"><%= messages.error %></p>
        <% } %>
        <% if (messages.favourite) { %>
          <p class="message-violet"><%= messages.favourite %></p>
        <% } %>
        <% if(typeof products != 'undefined'){ %> 
        <section class="favourite-products-wrapper">
          <% products.forEach((product)=>{ %>
            <div class="product-wrapper">
              <a href="/store/<%= product.product_category_route %>/<%= product.product_route %>" class="product-image-link">
                <img src="<%= product.product_image_path %>" alt="<%= product.product_name %>" class="product-image">
              </a>
              <a href="/store/<%= product.product_category_route %>/<%= product.product_route %>" class="product-name-link"><%= product.product_name %></a>
              <p class="product-price"><%= product.product_price %> Â£</p>
              <div class="product-amount">
                1
                <p class="product-amount-info">amount</p>
              </div>
              <a href="/cart/add/<%= product.product_id %>" class="product-cart-button">
                  <i class="fa-solid fa-cart-plus"></i> 
              </a>
              <a href="/user/favourites/remove/<%= product.product_id %>" class="product-delete-button">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </div>
            <% }) %> 
        </section>
        <% } %> 
      </main>
    </div>
    <%- include('../partials/footer') %>
    <%-include('../partials/scriptsConfig') %>
  </body>
</html>
