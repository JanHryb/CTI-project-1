<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/headConfig') %>
    <link rel="stylesheet" href="/styles/checkout.css" />
    <title>checkout · delivery & payment</title>
  </head>
  <body>
    <div class="container">
      <%- include('../partials/navbar') %>
      <main class="main">
      <form class="delivery-payment-form" action="/checkout" method="post">
        <div class="order-info">
          <div class="ordered-products-wrapper">
            <% products.forEach((product) => { %> 
            <div class="product">
              <a href="/store/<%= product.product_category_route %>/<%= product.product_route %>" class="product-image-link">
                <img src="<%= product.product_image_path %>" alt="<%= product.product_name %>" class="product-image">
              </a>
              <div class="product-name-amount-wrapper">
                <a href="/store/<%= product.product_category_route %>/<%= product.product_route %>" class="product-name"><%= product.product_name %></a>
                <p class="product-amount">1</p>
              </div>
              <p class="product-price"><%= product.product_price %> £</p>
            </div>
            <% }) %> 
          </div>
          <p class="choosen-shipping"></p>
          <p class="choosen-payment"></p>
          <p class="total-price">Total: <%= totalPrice %> £ + ship </p>
          <div class="button-wrapper">
            <button type="submit" class="submit-button">Summary</button>
          </div>
        </div>
        <div class="delivery-wrapper">
        <h2 class="form-heading">Delivery</h2>
          <% shippingOptions.forEach((option, index)=>{ %> 
          <div class="radio-wrapper">
            <input type="radio" name="shippingOption" id="<%= option.shipping_option_name %>" class="radio" value="<%= option.shipping_option_name %>" required>
            <label for="<%= option.shipping_option_name %>" class="radio-label"><%= option.shipping_option_name %> (<%= option.shipping_option_price %> £)</label>
          </div>
          <% }) %> 
        </div>
        <div class="address-wraper">
          <h2 class="form-heading">Shipping address</h2>
          <% if (messages.error) { %>
            <p class="message-error"><%= messages.error %></p>
          <% } %>
          <div class="input-wrapper">
            <label for="firstName" class="input-label">First name</label>
            <input type="text" name="firstName" id="firstName" class="input" value="<%= typeof bodyData.firstName && typeof bodyData != 'undefined' ? bodyData.firstName : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="lastName" class="input-label">Last name</label>
            <input type="text" name="lastName" id="lastName" class="input" value="<%= typeof bodyData.lastName != 'undefined' ? bodyData.lastName : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="street" class="input-label">Street</label>
            <input type="text" name="street" id="street" class="input" value="<%= typeof bodyData.street != 'undefined' ? bodyData.street : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="streetNumber" class="input-label">Street number</label>
            <input type="text" name="streetNumber" id="streetNumber" class="input" value="<%= typeof bodyData.streetNumber != 'undefined' ? bodyData.streetNumber : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="postalCode" class="input-label">Postal code</label>
            <input type="text" name="postalCode" id="postalCode" class="input" value="<%= typeof bodyData.postalCode != 'undefined' ? bodyData.postalCode : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="city" class="input-label">City</label>
            <input type="text" name="city" id="city" class="input" value="<%= typeof bodyData.city != 'undefined' ? bodyData.city : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="email" class="input-label">Email</label>
            <input type="email" name="email" id="email" class="input" value="<%= typeof bodyData.email != 'undefined' ? bodyData.email : '' %>" required>
          </div>
          <div class="input-wrapper">
            <label for="phoneNumber" class="input-label">Phone number</label>
            <input type="number" name="phoneNumber" id="phoneNumber" class="input" value="<%= typeof bodyData.phoneNumber != 'undefined' ? bodyData.phoneNumber : '' %>" required>
          </div>
        </div>
        <div class="payment-warapper">
          <h2 class="form-heading">Payment</h2>
          <% paymentMethods.forEach((method, index)=>{ %> 
            <div class="radio-wrapper">
              <input type="radio" name="paymentMethod" id="<%= method.payment_method_name %>" class="radio" value="<%= method.payment_method_name %>" required >
              <label for="<%= method.payment_method_name %>" class="radio-label"><%= method.payment_method_name %></label>
            </div>
            <% }) %> 
        </div>
      </form>
      </main>
    </div>
    <%- include('../partials/footer') %>
    <%-include('../partials/scriptsConfig')%>
    <script src="/scripts/checkout.js"></script>
  </body>
</html>
